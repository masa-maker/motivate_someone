<div class="container-fluid d-frex justify-content-around">
  <% @posts.each do |post| %>
    <ul class="cards">
      <li>
        <div class="card" style="width: 20rem;">
          <%= image_tag post.image.variant(resize: '300x500')%>
          <div class="card-body">
            <h5 class="card-title">Card title</h5>
            <p class="card-text"><%= post.text%></p>
            <a href="#" class="btn btn-primary">いいね</a>
          </div>
        </div>
      </li>
    </ul>
  <% end %>
</div>


